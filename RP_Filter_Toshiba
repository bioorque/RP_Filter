import pyautogui
import tkinter

from time import sleep

while True:

    pyautogui.click(1, 1)
    pyautogui.click(434, 556)
    pyautogui.drag(438, 240, duration=1)
    
    pyautogui.hotkey('ctrl', 'c')

    root = tkinter.Tk()
    root.withdraw()
    a = root.clipboard_get()
    
    b = a.split('\n')

    c = b[1]

    d = c.split('Artist: ')
    
    artist = d[1]
    
    e = b[3]

    f = e[-4:]

    year = int(f)

    pyautogui.click(1, 1)
    
    listofforbidden = ["Loreena McKennitt", "Coldplay", "Pet Shop Boys", "U2", "MGMT"]
    
    for forbidden in listofforbidden:
    
        if artist == forbidden:
            pyautogui.click(113, 411)
            pyautogui.click(429, 142)
            
    if year < 2010:
        pyautogui.click(113, 411)
        pyautogui.click(429, 142)
        
    sleep(10)
